{
  "name": "chatterbox2",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "copyfiles src/assets/* src/assets/**/* --up 2 --exclude **/*.ts dist/assets/",
    "test": "tsc --noEmit",
    "prestart": "npm run build",
    "start": "twilio-run --functions-folder dist/functions --assets-folder dist/assets",
    "predeploy": "npm run build",
    "deploy": "twilio-run deploy --functions-folder dist/functions --assets-folder dist/assets --runtime node12",
    "promote": "twilio-run promote --to= --from=dev"
  },
  "dependencies": {
    "@twilio-labs/serverless-runtime-types": "^1.1.8"
  },
  "devDependencies": {
    "twilio-run": "^2.9.0",
    "typescript": "^4.2.3",
    "copyfiles": "^2.4.1"
  },
  "engines": {
    "node": "12"
  }
}
